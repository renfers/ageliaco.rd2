          <script>
          $(function() {
            // run the currently selected effect
            function runEffect() {
              // run the effect
              $( '[id^=effect-]' ).toggle( "slide");
            };
  
            // set effect from select menu value
            $( '[id^=button-]' ).click(function() {
              runEffect();
              return false;
            });
 
            $( '[id^=effect-]' ).show();
          });
          </script>
       </tal:js>
