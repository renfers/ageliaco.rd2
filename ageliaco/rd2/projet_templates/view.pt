<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ageliaco.rd2">
<head>
    <metal:block fill-slot="style_slot">
        <link rel="stylesheet" type="text/css" 
            tal:define="navroot context/@@plone_portal_state/navigation_root_url"
            tal:attributes="href string:${navroot}/++resource++ageliaco.rd2/projet.css"
            />
    </metal:block>
<!--     <metal:block fill-slot="javascript_head_slot" tal:define="navroot context/@@plone_portal_state/navigation_root_url">
        <script type="text/javascript"  tal:define="navroot context/@@plone_portal_state/navigation_root_url"
            tal:attributes="src string:${navroot}/++resource++ageliaco.rd2/projet.js"
            src="jquery.jqDock.min.js">

        </script>
	
    </metal:block>
 -->
</head>
<body>

<metal:main fill-slot="main">
    <div 
        tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;
                navroot context/@@plone_portal_state/navigation_root_url">

<div id="realisation" tal:condition="python: view.hasLink() or view.hasRealisation()">
<h3 tal:condition="python: view.hasLink()"><a tal:attributes="href view/hasLink">lien vers réalisation</a></h3>
<h3 tal:condition="python: view.hasRealisation()"><a tal:attributes="href view/hasRealisation">Réalisation</a></h3>
</div>
<div  tal:condition="python:len(view.cycles_obj())" id="cycleList">
<h3 class="cycleListTitle">Cycles</h3>
<ul class="cycleList">
        <tal:block repeat="cycle view/cycles_obj">
	    <li class="genericButton" ><a class='editAuteur'  
	        tal:content="cycle/id" 
	        tal:attributes="href python:cycle.getURL();
	                        title cycle/Title" href="#">
	        Cycle id
            </a></li>
        
        </tal:block>
</ul>
</div>
        
        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" tal:content="context/title" />


<!-- overlay triggers. overlay is referenced in the 'rel' attribute -->
        <div tal:define="picture nocall:context/picture"
             tal:condition="nocall:picture">
            <img tal:attributes="src string:${context/absolute_url}/@@download/picture/${picture/filename};
                                 height picture/_height | nothing;
                                 width picture/_width | nothing;"
                style="float:left;margin:0 30px 30px 0;"
                />
        </div>
        <span tal:condition="context/presentation" tal:content="structure context/presentation/output" />
        
        <span class="discreet" tal:condition="python: not view.isRepository()" >
            <tal:block condition="context/start">
                <span i18n:translate="label_from">Depuis </span>
                <span tal:content="python:context.start" />
            </tal:block>
            <tal:block condition="context/duration">
                <span i18n:translate="label_to">pour </span>
                <span tal:content="python:context.duration" />
                an(s)
            </tal:block>
        </span>
 
          <div tal:condition="python:  view.isRepository() and here.portal_membership.isAnonymousUser">
              <div class="newprojet">
                <h1>NOUVEAU PROJET</h1>
                <span tal:content="structure python:view.form()">form</span>
                    
                </div>
              <div class="reconductprojet"  >
                <h1>RECONDUCTION D'UN PROJET EN COURS</h1>
                <span tal:content="structure python:view.form2()">form2</span>                
              </div>
            <ul>

                  <li tal:condition="view/formResult">
                  <b>Nouveau projet : </b>
                     <span tal:content="view/formResult"
                        ></span>
                  </li>
                  <li tal:condition="view/form2Result">
                  <b>Projet reconduit : </b>
                     <span tal:content="structure python:view.projet"
                        ></span>
                  </li>
       
            </ul>
         </div>

        <div tal:replace="structure provider:plone.belowcontentbody" />
</div>

    </metal:main>

</body>
</html>